{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kdf.example/schema/kdf_v0_1.schema.json",
  "title": "KDF v0.1",
  "type": "object",
  "required": ["kdf_version", "dataset", "sources", "documents"],
  "properties": {
    "kdf_version": { "type": "string", "pattern": "^0\\.1(\\..+)?$" },
    "dataset": {
      "type": "object",
      "required": ["id", "created_at"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "created_at": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": true
    },
    "sources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "sha256"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "uri": { "type": "string" },
          "sha256": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" }
        },
        "additionalProperties": true
      }
    },
    "documents": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/node" }
    },
    "atoms": {
      "type": "array",
      "items": { "$ref": "#/$defs/atom" }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "node": {
      "type": "object",
      "required": ["id", "type", "text"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "type": { "type": "string", "enum": ["document", "section", "paragraph"] },
        "title": { "type": "string" },
        "text": { "type": "string" },
        "children": {
          "type": "array",
          "items": { "$ref": "#/$defs/node" }
        }
      },
      "additionalProperties": false
    },
    "atom": {
      "type": "object",
      "required": ["id", "type", "payload", "evidence"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "type": { "type": "string", "enum": ["fact", "rule", "definition"] },
        "payload": { "type": "string", "minLength": 1 },
        "evidence": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/evidence" }
        }
      },
      "additionalProperties": false
    },
    "evidence": {
      "type": "object",
      "required": ["source_id", "locators", "validation"],
      "properties": {
        "source_id": { "type": "string", "minLength": 1 },
        "node_path": { "type": "string", "minLength": 1 },
        "locators": {
          "type": "object",
          "required": ["primary", "anchors"],
          "properties": {
            "primary": {
              "type": "object",
              "required": ["type", "start", "end"],
              "properties": {
                "type": { "type": "string", "enum": ["text_offset"] },
                "start": { "type": "integer", "minimum": 0 },
                "end": { "type": "integer", "minimum": 0 }
              },
              "additionalProperties": false
            },
            "anchors": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "required": ["type"],
                "properties": {
                  "type": { "type": "string", "enum": ["span_fingerprint", "node_path"] },
                  "algo": { "type": "string", "enum": ["sha256"] },
                  "value": { "type": "string", "minLength": 1 },
                  "path": { "type": "string", "minLength": 1 }
                },
                "additionalProperties": true
              }
            }
          },
          "additionalProperties": false
        },
        "validation": {
          "type": "object",
          "required": ["status"],
          "properties": {
            "status": { "type": "string", "enum": ["valid", "needs_review", "invalid"] },
            "checked_at": { "type": "string" },
            "method": { "type": "string" }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    }
  }
}
